<Window x:Class="sekretar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:sekretar"
        xmlns:Util="clr-namespace:sekretar.View.Util"
        xmlns:data="clr-namespace:System.Data;assembly=System.Data"
        xmlns:Model="clr-namespace:sekretar.View.Model"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        
        <Util:MenuSideBar Grid.Column="0"/>

        <Model:DataView x:Name="DataViewer" Grid.Column="1"/>
    </Grid>
</Window>
